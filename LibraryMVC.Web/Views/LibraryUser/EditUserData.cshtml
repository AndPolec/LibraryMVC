@model LibraryMVC.Application.ViewModels.User.NewLibraryUserVm

@{
    ViewData["Title"] = "Edytuj dane";
}

<div class="row">
    <div class="col-md-8 mx-auto p-4 bg-light bg-opacity-50 rounded-3 shadow-lg border">
        <form asp-action="EditUserData" method="post">
            <h2>Edytuj dane</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-1">
                <input type="hidden" asp-for="Id" readonly/>
                <input type="hidden" asp-for="IdentityUserId" readonly/>
                <input type="hidden" asp-for="Address.Id" readonly/>
                <div class="col-md-6 form-floating">
                    <input asp-for="FirstName" class="form-control" readonly />
                    <label asp-for="FirstName"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-floating">
                    <input asp-for="LastName" class="form-control" readonly/>
                    <label asp-for="LastName"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-floating">
                    <input asp-for="Email" class="form-control" readonly />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-floating mb-2">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <label asp-for="PhoneNumber"></label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-floating">
                    <input asp-for="Address.Street" class="form-control" />
                    <label asp-for="Address.Street"></label>
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-floating">
                    <input asp-for="Address.BuildingNumber" class="form-control" />
                    <label asp-for="Address.BuildingNumber"></label>
                    <span asp-validation-for="Address.BuildingNumber" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-floating">
                    <input asp-for="Address.FlatNumber" class="form-control" />
                    <label asp-for="Address.FlatNumber"></label>
                    <span asp-validation-for="Address.FlatNumber" class="text-danger"></span>
                </div>
                <div class="col-md-5 form-floating">
                    <input asp-for="Address.ZipCode" class="form-control" />
                    <label asp-for="Address.ZipCode"></label>
                    <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                </div>
                <div class="col-md-7 form-floating">
                    <input asp-for="Address.City" class="form-control" />
                    <label asp-for="Address.City"></label>
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <a class="mt-4 w-100 btn btn-lg btn-primary rounded-pill" asp-action="ViewLoggedUserDetails"><i class="fa-solid fa-arrow-left-long"></i> &nbsp Wróć</a>
                </div>
                <div class="col-md-9">
                    <button type="submit" class="w-100 mt-4 btn btn-lg btn-success rounded-pill"><i class="fa-solid fa-pen-to-square"></i> &nbsp Zapisz zmiany</button>
                </div>
            </div>
        </form>
    </div>
</div>


