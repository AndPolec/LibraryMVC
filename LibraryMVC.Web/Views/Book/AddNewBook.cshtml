@model LibraryMVC.Application.ViewModels.Book.NewBookVm

@{
    ViewData["Title"] = "Dodaj książkę";
}

<h1>Dodaj książkę</h1>

<div class="container p-4 bg-light bg-opacity-75 rounded-3 shadow-lg border mt-3">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="AddNewBook">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-floating mb-3">
                    <label asp-for="Title" class="control-label" ></label>
                    <input asp-for="Title" class="form-control" id="@Model.Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ISBN" class="control-label"></label>
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RelaseYear" class="control-label"></label>
                    <input asp-for="RelaseYear" class="form-control" />
                    <span asp-validation-for="RelaseYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AuthorId" class="control-label"></label>
                    <select asp-for="AuthorId" class="form-select" aria-label="Default select example">
                        <option selected>Wybierz autora:</option>
                        @foreach (var author in Model.AllAuthors.Authors)
                        {
                            <option value="@author.Id">@author.FullName</option>
                        }
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <select asp-for="PublisherId" class="form-select" id="publisherSelect" aria-label="Default select example">
                        @foreach (var publisher in Model.AllPublishers.Publishers)
                        {
                            <option value="@publisher.Id">@publisher.Name</option>
                        }
                    </select>
                    <label for="publisherSelect">Wybierz wydawcę</label>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Wybierz gatunek</label>
                    <select asp-for="GenreIds" class="form-select" multiple>
                       @foreach (var genre in Model.AllGenres.Genres)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    </select>   
                    <span asp-validation-for="GenreIds" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
