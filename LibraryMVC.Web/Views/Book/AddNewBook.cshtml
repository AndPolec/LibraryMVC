@model LibraryMVC.Application.ViewModels.Book.NewBookVm

@{
    ViewData["Title"] = "Dodaj książkę";
}

<h1 class="fw-bold">Dodaj książkę</h1>

<div class="container p-4 bg-light bg-opacity-75 rounded-3 shadow-lg border mt-3">
    <form asp-action="AddNewBook">
        <div class="row mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ISBN" class="form-label"></label>
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="RelaseYear" class="form-label"></label>
                    <input asp-for="RelaseYear" class="form-control" />
                    <span asp-validation-for="RelaseYear" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 text-center my-auto">
                <div class="form-group mb-3">
                    <label class="mb-2" asp-for="AuthorId"></label> <br />
                    <select asp-for="AuthorId" class="selectpicker show-tick" data-live-search="true" title="Wybierz autora">
                        @foreach (var author in Model.AllAuthors.Authors)
                        {
                            <option value="@author.Id">@author.FullName</option>
                        }
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger d-block"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="mb-2" asp-for="PublisherId"></label> <br />
                    <select asp-for="PublisherId" class="selectpicker" data-live-search="true" title="Wybierz wydawcę">
                        @foreach (var publisher in Model.AllPublishers.Publishers)
                        {
                            <option value="@publisher.Id">@publisher.Name</option>
                        }
                    </select>
                    <span asp-validation-for="PublisherId" class="text-danger d-block"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="mb-2">Gatunek</label> <br />
                    <select asp-for="GenreIds" class="selectpicker" multiple data-live-search="true" title="Wybierz gatunek">
                        @foreach (var genre in Model.AllGenres.Genres)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    </select>   
                    <span asp-validation-for="GenreIds" class="text-danger d-block"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="d-grid gap-2 d-md-block">
                <a class="btn btn-primary" role="button" asp-action="AdminBookPanel">
                    <i class="fa-solid fa-arrow-left-long"></i> Wróć
                </a>
                <button type="submit" class="btn btn-success"> 
                    <i class="fa-solid fa-circle-plus"></i> Dodaj do bazy
                </button>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
