@model LibraryMVC.Application.ViewModels.Loan.LoanSettingsVm

@{
    ViewData["Title"] = "ChangeGlobalLoanSettings";
}

<partial name="_Notification" />

<h1>Ustawiania wypożyczeń</h1>

<div class="container p-4 bg-light bg-opacity-75 rounded-3 shadow-lg border mt-3">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ChangeGlobalLoanSettings">
                <div class="form-group mb-3">
                    <label asp-for="penaltyRatePerDay" class="control-label"></label>
                    <input asp-for="penaltyRatePerDay" class="form-control" />
                    <span asp-validation-for="penaltyRatePerDay" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="durationOfFreeLoan" class="control-label"></label>
                    <input asp-for="durationOfFreeLoan" class="form-control" />
                    <span asp-validation-for="durationOfFreeLoan" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="maxBooksInOrder" class="control-label"></label>
                    <input asp-for="maxBooksInOrder" class="form-control" />
                    <span asp-validation-for="maxBooksInOrder" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2 d-md-block">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-circle-plus"></i> Zapisz zmiany
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

