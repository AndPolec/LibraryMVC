@model LibraryMVC.Application.ViewModels.Loan.LoanDetailsVm

@{
    ViewData["Title"] = "ViewLoan";
}

<h1>ViewLoan</h1>

<div>
    <h4>LoanDetailsVm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDueDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsCheckedOut)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsCheckedOut)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CheckOutDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CheckOutDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsReturned)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsReturned)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Penalty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Penalty)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <table>
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    RelaseYear
                </th>
                <th>
                    Genre
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var book in Model.Books)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => book.Id) </td>
                    <td> @Html.DisplayFor(modelItem => book.Title) </td>
                    <td> @Html.DisplayFor(modelItem => book.AuthorFullName) </td>
                    <td> @Html.DisplayFor(modelItem => book.RelaseYear) </td>
                    <td> @Html.DisplayFor(modelItem => book.Genre) </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
    <a asp-action="CancelLoan" asp-route-loanId="@Model.Id">Anuluj</a>
</div>
