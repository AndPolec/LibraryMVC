@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="col-md-8 mx-auto">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>Utwórz nowe konto</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row g-1">
            <div class="col-md-6 form-floating">
                <input asp-for="Input.NewLibraryUserInfo.FirstName" class="form-control" />
                <label asp-for="Input.NewLibraryUserInfo.FirstName"></label>
                <span asp-validation-for="Input.NewLibraryUserInfo.FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-floating">
                <input asp-for="Input.NewLibraryUserInfo.LastName" class="form-control" />
                <label asp-for="Input.NewLibraryUserInfo.LastName"></label>
                <span asp-validation-for="Input.NewLibraryUserInfo.LastName" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-floating mb-2">
                <input asp-for="Input.NewLibraryUserInfo.PhoneNumber" class="form-control" />
                <label asp-for="Input.NewLibraryUserInfo.PhoneNumber"></label>
                <span asp-validation-for="Input.NewLibraryUserInfo.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-floating">
                <input asp-for="Input.NewLibraryUserInfo.Address.Street" class="form-control" />
                <label asp-for="Input.NewLibraryUserInfo.Address.Street"></label>
                <span asp-validation-for="Input.NewLibraryUserInfo.Address.Street" class="text-danger"></span>
            </div>
            <div class="col-md-3 form-floating">
                <input asp-for="Input.NewLibraryUserInfo.Address.BuildingNumber" class="form-control" />
                <label asp-for="Input.NewLibraryUserInfo.Address.BuildingNumber"></label>
                <span asp-validation-for="Input.NewLibraryUserInfo.Address.BuildingNumber" class="text-danger"></span>
            </div>
            <div class="col-md-3 form-floating">
                <input asp-for="Input.NewLibraryUserInfo.Address.FlatNumber" class="form-control" />
                <label asp-for="Input.NewLibraryUserInfo.Address.FlatNumber"></label>
                <span asp-validation-for="Input.NewLibraryUserInfo.Address.FlatNumber" class="text-danger"></span>
            </div>
            <div class="col-md-5 form-floating">
                <input asp-for="Input.NewLibraryUserInfo.Address.ZipCode" class="form-control" />
                <label asp-for="Input.NewLibraryUserInfo.Address.ZipCode"></label>
                <span asp-validation-for="Input.NewLibraryUserInfo.Address.ZipCode" class="text-danger"></span>
            </div>
            <div class="col-md-7 form-floating">
                <input asp-for="Input.NewLibraryUserInfo.Address.City" class="form-control" />
                <label asp-for="Input.NewLibraryUserInfo.Address.City"></label>
                <span asp-validation-for="Input.NewLibraryUserInfo.Address.City" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 mt-4 btn btn-lg btn-primary">Utwórz konto</button>
        </div>
    </form>
    
</div>
<div class="row col-md-8 mx-auto mt-5">
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
